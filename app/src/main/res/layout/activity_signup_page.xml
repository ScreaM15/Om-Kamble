<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_page">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse_3"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="150dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-140dp"
        android:layout_marginTop="-170dp"
        android:src="@drawable/ellipse_1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse_2"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="-100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:text="@string/hello"
        android:textSize="25sp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center_horizontal"
        android:text="@string/signup"
        android:textColor="@color/white"
        android:textSize="35sp"/>

    <ImageView
        android:id="@+id/username1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/user_rec1"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/username1"
        android:layout_alignTop="@+id/username1"
        android:layout_alignEnd="@+id/username1"
        android:layout_alignBottom="@+id/username1"
        android:fontFamily="@font/inter_regular"
        android:hint="Enter Your User Name"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        android:textColorHint="#7F7F7F"/>

    <ImageView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/user_rec1"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phonenumber"
        android:layout_alignTop="@+id/phonenumber"
        android:layout_alignEnd="@+id/phonenumber"
        android:layout_alignBottom="@+id/phonenumber"
        android:fontFamily="@font/inter_regular"
        android:hint="Enter Your Contact Number"
        android:minHeight="48dp"
        android:paddingLeft="20dp"
        android:textColorHint="#7F7F7F"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/emailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonenumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/user_rec1"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailaddress"
        android:layout_alignTop="@+id/emailaddress"
        android:layout_alignEnd="@+id/emailaddress"
        android:layout_alignBottom="@+id/emailaddress"
        android:fontFamily="@font/inter_regular"
        android:hint="Enter Your Email Address"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        android:textColorHint="#7F7F7F"/>

    <ImageView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailaddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/user_rec1"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password"
        android:layout_alignTop="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:fontFamily="@font/inter_regular"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:longClickable="false"
        android:paddingLeft="20dp"
        android:textColorHint="#7F7F7F"
        android:textSize="14sp" />


    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="264dp"
        android:layout_height="30dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="72dp"
        android:fontFamily="@font/inter_medium"
        android:text="I accept the policy terms &amp; conditions"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="60dp"
        app:srcCompat="@drawable/rectangle_7"
        android:id="@+id/signupbutton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signupbutton"
        android:layout_alignTop="@+id/signupbutton"
        android:layout_alignEnd="@+id/signupbutton"
        android:layout_alignBottom="@+id/signupbutton"
        android:fontFamily="@font/inter_semibold"
        android:paddingLeft="75dp"
        android:paddingTop="12dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <ImageView
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="60dp"
        android:src="@drawable/line_1" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/signupbutton"
        android:fontFamily="@font/inter_medium"
        android:text="Or"
        android:textColor="@color/black" />

    <ImageView
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="60dp"
        android:src="@drawable/line_1" />

    <ImageView
        android:id="@+id/facebooklogo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/signupbutton"
        android:layout_alignTop="@+id/google_logo"
        android:layout_alignBottom="@+id/google_logo"
        android:layout_marginStart="80dp"
        app:srcCompat="@drawable/facebook_new" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/google_logo"
        android:layout_alignBottom="@+id/google_logo"
        android:layout_marginRight="80dp"
        app:srcCompat="@drawable/twitter" />

    <ImageView
        android:id="@+id/google_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupbutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="60dp"
        app:srcCompat="@drawable/google_logo" />
</RelativeLayout>